<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BjjTrainer.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BjjTrainer"
    xmlns:controls="clr-namespace:BjjTrainer.Controls"
    xmlns:views="clr-namespace:BjjTrainer.Views"
    xmlns:lessons="clr-namespace:BjjTrainer.Views.Lessons"
    xmlns:users="clr-namespace:BjjTrainer.Views.Users"
    xmlns:moves="clr-namespace:BjjTrainer.Views.Moves"
    xmlns:events="clr-namespace:BjjTrainer.Views.Events"
    xmlns:train="clr-namespace:BjjTrainer.Views.Training"
    xmlns:viewModels="clr-namespace:BjjTrainer.ViewModels"
    Shell.FlyoutBehavior="Flyout"
    Title="BjjTrainer">
    
    <Shell.Resources>
        <Style x:Key="BaseStyle"
               TargetType="Element">
            <Setter Property="Shell.BackgroundColor"
                    Value="#000" />
            <Setter Property="Shell.ForegroundColor"
                    Value="Red" />
            <Setter Property="Shell.TitleColor"
                    Value="White" />
            <Setter Property="Shell.DisabledColor"
                    Value="Green" />
            <Setter Property="Shell.UnselectedColor"
                    Value="Purple" />
        </Style>
        <Style TargetType="ShellItem"
               BasedOn="{StaticResource BaseStyle}" />
        <Style x:Key="DomesticShell"
               TargetType="Element"
               BasedOn="{StaticResource BaseStyle}">
            <Setter Property="Shell.BackgroundColor"
                    Value="Black" />
        </Style>
        <Style x:Key="MonkeysShell"
               TargetType="Element"
               BasedOn="{StaticResource BaseStyle}">
            <Setter Property="Shell.BackgroundColor"
                    Value="#689F39" />
        </Style>
        <Style x:Key="ElephantsShell"
               TargetType="Element"
               BasedOn="{StaticResource BaseStyle}">
            <Setter Property="Shell.BackgroundColor"
                    Value="#ED3B3B" />
        </Style>
        <Style x:Key="BearsShell"
               TargetType="Element"
               BasedOn="{StaticResource BaseStyle}">
            <Setter Property="Shell.BackgroundColor"
                    Value="#546DFE" />
        </Style>
        <Style x:Key="AboutShell"
               TargetType="Element"
               BasedOn="{StaticResource BaseStyle}">
            <Setter Property="Shell.BackgroundColor"
                    Value="#96d1ff" />
        </Style>
    </Shell.Resources>
    
    <Shell.FlyoutHeader>
        <controls:FlyoutHeader />
    </Shell.FlyoutHeader>

    <!-- Unique routes for each page -->
    <ShellContent Route="MainPage" ContentTemplate="{DataTemplate views:MainPage}" />
    <ShellContent Route="LessonsPage" ContentTemplate="{DataTemplate lessons:LessonsPage}" />
    <ShellContent Route="SubLessonPage" ContentTemplate="{DataTemplate lessons:SubLessonPage}" />
    <ShellContent Route="SubLessonDetailsPage" ContentTemplate="{DataTemplate lessons:SubLessonDetailsPage}" />
    <ShellContent Route="LoginPage" ContentTemplate="{DataTemplate users:LoginPage}" />
    <ShellContent Route="FavoritesPage" ContentTemplate="{DataTemplate users:FavoritesPage}" />
    <ShellContent Route="TrainingLogFormPage" ContentTemplate="{DataTemplate train:TrainingLogFormPage}" />
    <ShellContent Route="UserProfilePage" ContentTemplate="{DataTemplate users:UserProfilePage}" />
    <ShellContent Route="UserProgressPage" ContentTemplate="{DataTemplate users:UserProgressPage}" />
    <ShellContent Route="CalendarPage" ContentTemplate="{DataTemplate events:CalendarPage}" />
    <ShellContent Route="MovesPage" ContentTemplate="{DataTemplate moves:MovesPage}" />
</Shell>
