<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BjjTrainer.Views.Moves.MovesPage"
             xmlns:syncfusion="clr-namespace:Syncfusion.Maui.ListView;assembly=Syncfusion.Maui.ListView"
             xmlns:vm="clr-namespace:BjjTrainer.ViewModels.Moves"
             Title="Moves"
             BackgroundColor="{StaticResource BackgroundColor}">

    <ContentPage.BindingContext>
        <vm:MovesViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto,*">
        <!-- Add Button -->
        <Button Text="Add Training Log"
                Clicked="OnAddLogTapped"
                HorizontalOptions="End"
                Margin="10"/>

        <!-- Syncfusion ListView -->
        <syncfusion:SfListView x:Name="LogListView"
                               Grid.Row="1"
                               ItemsSource="{Binding Moves}"
                               SelectionMode="Single"
                               AutoFitMode="Height">

            <syncfusion:SfListView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="15"
                           Margin="10"
                           BorderColor="LightGray"
                           CornerRadius="8"
                           HasShadow="True"
                           BackgroundColor="{StaticResource AccentBlue}">

                        <Grid ColumnDefinitions="*,Auto"
                              RowDefinitions="Auto,Auto,Auto,Auto"
                              ColumnSpacing="10"
                              RowSpacing="6">

                            <!-- Title and Date Section -->
                            <Label Text="Moves"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   Grid.ColumnSpan="2" />

                            <!-- Training Time and Details -->
                            <Label Text="{Binding Name, StringFormat='Move Name: {0} hrs'}"
                                   FontSize="14"
                                   TextColor="White"
                                   Grid.Row="3" />

                            <Label Text="{Binding Description, StringFormat='Description: {0}'}"
                                   FontSize="14"
                                   TextColor="White"
                                   Grid.Row="4" />

                        </Grid>
                    </Frame>
                </DataTemplate>
            </syncfusion:SfListView.ItemTemplate>
        </syncfusion:SfListView>
    </Grid>
</ContentPage>
