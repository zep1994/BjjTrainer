<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BjjTrainer.Views.Events.ShowEventPage"
             Title="Event Details"
             BackgroundColor="{StaticResource BackgroundColor}">

    <ContentPage.Content>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="{Binding Title}" FontSize="24" FontAttributes="Bold" TextColor="{StaticResource PrimaryTextColor}" />

            <Label Text="{Binding FormattedDate}" FontSize="16" TextColor="Gray" />
            <Label Text="{Binding FormattedEndDate}" FontSize="16" TextColor="Gray" />
            <Label Text="{Binding Description}" FontSize="14" TextColor="{StaticResource PrimaryTextColor}" />

            <!-- Navigation Buttons -->
            <HorizontalStackLayout Spacing="10">
                <Button Text="Back"
                        Clicked="OnBackButtonClicked"
                        BackgroundColor="Gray"
                        TextColor="White" />
                <Button Text="Update"
                        Clicked="OnUpdateButtonClicked"
                        BackgroundColor="Blue"
                        TextColor="White" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>
