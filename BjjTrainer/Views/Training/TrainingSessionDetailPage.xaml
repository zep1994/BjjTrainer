<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:BjjTrainer.ViewModels.Training"
             x:Class="BjjTrainer.Views.Training.TrainingSessionDetailPage"
             Title="TrainingSessionDetailPage">

    <StackLayout>
        <Label Text="{Binding TrainingSession.Name}" FontSize="Large"/>
        <Label Text="{Binding TrainingSession.Duration}" />
        <Label Text="{Binding TrainingSession.Date}" />
        <Label Text="{Binding TrainingSession.Location}" />
        <Label Text="{Binding TrainingSession.Notes}" />
    </StackLayout>
</ContentPage>