<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:syncfusion="clr-namespace:Syncfusion.Maui.DataForm;assembly=Syncfusion.Maui.DataForm"
             x:Class="BjjTrainer.Views.Training.UpdateTrainingLogPage"
             Title="Update Training Log"
             BackgroundColor="{StaticResource BackgroundColor}">

    <ContentPage.Resources>
        <Color x:Key="CardBackgroundColor">#23272F</Color>
        <Color x:Key="CardBorderColor">#2D313A</Color>
        <Color x:Key="CardMainTextColor">#FFFFFF</Color>
        <Color x:Key="CardSubTextColor">#B0B4BE</Color>
        <Color x:Key="AccentColor">#4F8EF7</Color>
        <Color x:Key="AccentRed">#E74C3C</Color>
        <Color x:Key="AccentGreen">#27AE60</Color>

        <Style x:Key="labelRedStyle"
               TargetType="Entry">
            <Setter Property="HorizontalOptions" Value="Center" />
            <Setter Property="VerticalOptions" Value="Center" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="TextColor" Value="Red" />
        </Style>

        <Style x:Key="labelBlueStyle"
               TargetType="Label">
            <Setter Property="HorizontalOptions" Value="Center" />
            <Setter Property="VerticalOptions" Value="Center" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="TextColor" Value="Blue" />
        </Style>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="24">

            <!-- Page Title -->
            <Label Text="Update Training Log"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="{StaticResource AccentColor}"
                   HorizontalOptions="Center"
                   Margin="0,10,0,0"/>

            <!-- Card Container for DataForm -->
            <Frame CornerRadius="16"
                   Padding="0"
                   BackgroundColor="{StaticResource CardBackgroundColor}"
                   BorderColor="{StaticResource CardBorderColor}"
                   HasShadow="True">

                <VerticalStackLayout Padding="24" Spacing="18">
                    <syncfusion:SfDataForm x:Name="dataForm"
                                           AutoGenerateItems="False"
                                           DataObject="{Binding}"
                                           ValidationMode="LostFocus"
                                           CommitMode="LostFocus"
                                           BackgroundColor="Transparent">

                        <syncfusion:SfDataForm.Items>
                            <syncfusion:DataFormDateItem FieldName="Date"
                                                         LabelText="Training Date"
                                                         Format="dd, MMMM yyyy"
                                                         PlaceholderText="Select Date" />

                            <syncfusion:DataFormTextItem FieldName="TrainingTime"
                                                         LabelText="Training Time (minutes)"
                                                         PlaceholderText="Enter minutes"
                                                         Keyboard="Numeric" />

                            <syncfusion:DataFormTextItem FieldName="RoundsRolled"
                                                         LabelText="Rounds Rolled"
                                                         PlaceholderText="Enter rounds"
                                                         Keyboard="Numeric" />

                            <syncfusion:DataFormTextItem FieldName="Submissions"
                                                         LabelText="Submissions"
                                                         PlaceholderText="Enter submissions"
                                                         Keyboard="Numeric" />

                            <syncfusion:DataFormTextItem FieldName="Taps"
                                                         LabelText="Taps"
                                                         PlaceholderText="Enter taps"
                                                         Keyboard="Numeric" />

                            <syncfusion:DataFormTextItem FieldName="Notes"
                                                         LabelText="Training Notes"
                                                         PlaceholderText="Add notes (optional)"
                                                         MaxLength="500" />

                            <syncfusion:DataFormTextItem FieldName="SelfAssessment"
                                                         LabelText="Self Assessment"
                                                         PlaceholderText="Your assessment"
                                                         MaxLength="500" />
                        </syncfusion:SfDataForm.Items>
                    </syncfusion:SfDataForm>
                </VerticalStackLayout>
            </Frame>

            <!-- Selected Moves Section -->
            <Frame CornerRadius="16"
                   Padding="0"
                   BackgroundColor="{StaticResource CardBackgroundColor}"
                   BorderColor="{StaticResource CardBorderColor}"
                   HasShadow="True">

                <VerticalStackLayout Padding="24" Spacing="12">
                    <HorizontalStackLayout>
                        <Label Text="Selected Moves"
                               FontAttributes="Bold"
                               FontSize="20"
                               TextColor="{StaticResource AccentColor}"
                               HorizontalOptions="StartAndExpand" />
                        <Button Text="Edit Moves"
                                x:Name="EditMovesButton"
                                Clicked="OnEditMovesClicked"
                                BackgroundColor="{StaticResource AccentColor}"
                                TextColor="White"
                                FontSize="16"
                                FontAttributes="Bold"
                                CornerRadius="16"
                                HeightRequest="40"
                                HorizontalOptions="End" />
                    </HorizontalStackLayout>

                    <CollectionView ItemsSource="{Binding Moves}" SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame CornerRadius="10"
                                       Padding="10"
                                       BackgroundColor="{StaticResource CardBorderColor}"
                                       Margin="5,2">
                                    <Label Text="{Binding Name}"
                                           FontSize="16"
                                           TextColor="{StaticResource CardMainTextColor}"
                                           VerticalOptions="Center" />
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <!-- Action Buttons -->
            <HorizontalStackLayout Spacing="16" Margin="0,10,0,0">
                <Button Text="Back"
                        Clicked="OnBackButtonClicked"
                        BackgroundColor="{StaticResource AccentRed}"
                        TextColor="White"
                        FontSize="18"
                        FontAttributes="Bold"
                        CornerRadius="16"
                        HeightRequest="48"
                        HorizontalOptions="FillAndExpand" />
                <Button Text="Save Update"
                        Clicked="OnUpdateButtonClicked"
                        BackgroundColor="{StaticResource AccentGreen}"
                        TextColor="White"
                        FontSize="18"
                        FontAttributes="Bold"
                        CornerRadius="16"
                        HeightRequest="48"
                        HorizontalOptions="FillAndExpand" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
