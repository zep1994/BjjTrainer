<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:BjjTrainer.ViewModels.Training"
             x:Class="BjjTrainer.Views.Training.TrainingSessionListPage"
             Title="Training Log">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="+" Command="{Binding AddTrainingSessionCommand}" />
    </ContentPage.ToolbarItems>

    <StackLayout Padding="10">
        <ListView ItemsSource="{Binding TrainingSessions}"
                  SelectedItem="{Binding SelectedSession}"
                  HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" Detail="{Binding Date}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
