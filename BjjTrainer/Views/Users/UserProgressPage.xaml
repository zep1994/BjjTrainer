<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BjjTrainer.Views.Users.UserProgressPage"
             Title="User Progress"
             BackgroundColor="{StaticResource BackgroundColor}"
             Loaded="OnPageLoaded">

    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout Padding="24" Spacing="24">

                <!-- Page Title -->
                <Label Text="Your Progress"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="{StaticResource AccentColor}"
                       HorizontalOptions="Center"
                       Margin="0,10,0,10">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Your " FontAttributes="Bold" />
                            <Span Text="Progress" FontAttributes="Bold" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>

                <!-- Training Summary Section -->
                <Frame CornerRadius="16"
                       Padding="0"
                       BackgroundColor="{StaticResource CardBackgroundColor}"
                       BorderColor="{StaticResource CardBorderColor}"
                       HasShadow="True">
                    <VerticalStackLayout Padding="24" Spacing="16">
                        <Label Text="Training Summary"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="{StaticResource AccentColor}" />

                        <!-- Individual Rows for Data -->
                        <Grid RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="12">
                            <HorizontalStackLayout Grid.Row="0" Spacing="12">
                                <Image Source="time10.png" WidthRequest="24" HeightRequest="24" VerticalOptions="Center" />
                                <Label Text="Total Training Time"
                                       FontSize="16"
                                       TextColor="{StaticResource CardSubTextColor}"
                                       VerticalOptions="Center" />
                                <Label Text="{Binding TotalTrainingTime}"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource CardMainTextColor}"
                                       HorizontalOptions="EndAndExpand" />
                            </HorizontalStackLayout>

                            <HorizontalStackLayout Grid.Row="1" Spacing="12">
                                <Image Source="rolled.png" WidthRequest="24" HeightRequest="24" VerticalOptions="Center" />
                                <Label Text="Total Rounds Rolled"
                                       FontSize="16"
                                       TextColor="{StaticResource CardSubTextColor}"
                                       VerticalOptions="Center" />
                                <Label Text="{Binding TotalRoundsRolled}"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource CardMainTextColor}"
                                       HorizontalOptions="EndAndExpand" />
                            </HorizontalStackLayout>

                            <HorizontalStackLayout Grid.Row="2" Spacing="12">
                                <Image Source="progress.png" WidthRequest="24" HeightRequest="24" VerticalOptions="Center" />
                                <Label Text="Total Submissions"
                                       FontSize="16"
                                       TextColor="{StaticResource CardSubTextColor}"
                                       VerticalOptions="Center" />
                                <Label Text="{Binding TotalSubmissions}"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource CardMainTextColor}"
                                       HorizontalOptions="EndAndExpand" />
                            </HorizontalStackLayout>

                            <HorizontalStackLayout Grid.Row="3" Spacing="12">
                                <Image Source="tap.png" WidthRequest="24" HeightRequest="24" VerticalOptions="Center" />
                                <Label Text="Total Taps"
                                       FontSize="16"
                                       TextColor="{StaticResource CardSubTextColor}"
                                       VerticalOptions="Center" />
                                <Label Text="{Binding TotalTaps}"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource CardMainTextColor}"
                                       HorizontalOptions="EndAndExpand" />
                            </HorizontalStackLayout>
                        </Grid>
                    </VerticalStackLayout>
                </Frame>

                <!-- Moves Performed Section -->
                <Frame CornerRadius="16"
                       Padding="0"
                       BackgroundColor="{StaticResource CardBackgroundColor}"
                       BorderColor="{StaticResource CardBorderColor}"
                       HasShadow="True">
                    <VerticalStackLayout Padding="24" Spacing="12">
                        <Label Text="Moves Performed"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="{StaticResource AccentColor}" />
                        <CollectionView ItemsSource="{Binding MovesPerformed}"
                                        BackgroundColor="Transparent">
                            <CollectionView.ItemsLayout>
                                <LinearItemsLayout Orientation="Vertical" ItemSpacing="8" />
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame CornerRadius="10"
                                           Padding="16"
                                           Margin="0,4"
                                           BackgroundColor="{StaticResource CardBackgroundColor}"
                                           BorderColor="{StaticResource CardBorderColor}">
                                        <VerticalStackLayout Spacing="8">
                                            <Label Text="{Binding Name}"
                                                   FontSize="18"
                                                   FontAttributes="Bold"
                                                   TextColor="{StaticResource CardMainTextColor}" />
                                            <Label Text="{Binding Description}"
                                                   FontSize="14"
                                                   TextColor="{StaticResource CardSubTextColor}"
                                                   LineBreakMode="WordWrap" />
                                            <HorizontalStackLayout Spacing="12">
                                                <Label Text="Skill Level:"
                                                       FontSize="14"
                                                       TextColor="{StaticResource CardSubTextColor}" />
                                                <Label Text="{Binding SkillLevel}"
                                                       FontSize="14"
                                                       FontAttributes="Bold"
                                                       TextColor="{StaticResource CardMainTextColor}" />
                                            </HorizontalStackLayout>
                                            <HorizontalStackLayout Spacing="12">
                                                <Label Text="Times Practiced:"
                                                       FontSize="14"
                                                       TextColor="{StaticResource CardSubTextColor}" />
                                                <Label Text="{Binding TrainingLogCount}"
                                                       FontSize="14"
                                                       FontAttributes="Bold"
                                                       TextColor="{StaticResource CardMainTextColor}" />
                                            </HorizontalStackLayout>
                                        </VerticalStackLayout>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Frame>

                <!-- Training Log Section -->
                <Frame IsVisible="{Binding StudentTrainingLog, Converter={StaticResource NullToBoolConverter}}">
                    <VerticalStackLayout>
                        <Label Text="Your Training Log" FontAttributes="Bold" FontSize="20"/>
                        <Label Text="{Binding StudentTrainingLog.Date, StringFormat='Date: {0:MMM dd, yyyy}'}"/>
                        <Label Text="{Binding StudentTrainingLog.TrainingTime, StringFormat='Time: {0} min'}"/>
                        <!-- List moves -->
                        <CollectionView ItemsSource="{Binding StudentTrainingLog.Moves}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Label Text="{Binding Name}" />
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Frame>

            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>