<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BjjTrainer.Views.Users.UserProfilePage"
             Title="UserProfilePage">
    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="15" BackgroundColor="White">
            <Label Text="User Profile"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,10,0,10"/>

            <Label Text="Username:" FontSize="18" FontAttributes="Bold" />
            <Label Text="{Binding Username}" FontSize="18" TextColor="#333" />

            <Label Text="Email:" FontSize="18" FontAttributes="Bold" />
            <Label Text="{Binding Email}" FontSize="18" TextColor="#333" />

            <!-- Additional user information can go here -->
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
