<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BjjTrainer.Views.Schools.CreateSchoolPage">
    <StackLayout Padding="20" Spacing="15">
        <Label Text="Create School" FontSize="24" HorizontalOptions="Center" />

        <Entry Placeholder="Name" Text="{Binding School.Name}" />
        <Entry Placeholder="Address" Text="{Binding School.Address}" />
        <Entry Placeholder="Phone" Text="{Binding School.Phone}" />

        <Button Text="Save" Command="{Binding SaveCommand}" />
    </StackLayout>
</ContentPage>
