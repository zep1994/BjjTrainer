<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BjjTrainer.Views.Schools.UpdateSchoolPage"
             BackgroundColor="{StaticResource BackgroundColor}">

    <ScrollView>
        <StackLayout Padding="20" Spacing="15">

            <Label Text="Update School" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />

            <Entry Placeholder="School Name" Text="{Binding School.Name}" />
            <Entry Placeholder="Address" Text="{Binding School.Address}" />
            <Entry Placeholder="Phone" Text="{Binding School.Phone}" />

            <Button Text="Save Changes"
                    BackgroundColor="{StaticResource ButtonBackgroundColor}"
                    TextColor="White"
                    Clicked="OnSaveClicked" />
        </StackLayout>
    </ScrollView>
</ContentPage>
