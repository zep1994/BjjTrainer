<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BjjTrainer.Views.Coaches.CoachManagementPage"
             xmlns:vm="clr-namespace:BjjTrainer.ViewModels.Coaches"
             Title="CoachManagementPage">
    <ContentPage.BindingContext>
        <vm:CoachManagementViewModel />
    </ContentPage.BindingContext>
    <StackLayout Padding="20" Spacing="20">
        <Label Text="Schools" FontSize="Medium" HorizontalOptions="Center" />
        <CollectionView ItemsSource="{Binding Schools}">
          
        </CollectionView>
        <Button Text="Create School" Command="{Binding CreateSchoolCommand}" />
    </StackLayout>
</ContentPage>