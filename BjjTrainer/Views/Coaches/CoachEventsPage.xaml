<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BjjTrainer.Views.Coaches.CoachEventsPage"
             Title="CoachEventsPage">
    <StackLayout Padding="10">
        <Label Text="Past Events" 
               FontSize="24" 
               FontAttributes="Bold"
               HorizontalOptions="Center"
               Margin="0,10,0,10"/>

        <CollectionView ItemsSource="{Binding PastEvents}"
                        SelectionMode="Single"
                        SelectionChanged="OnEventSelected">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5" BackgroundColor="LightGray">
                        <StackLayout>
                            <Label Text="{Binding Event.Title}" FontSize="18" FontAttributes="Bold"/>
                            <Label Text="{Binding Event.StartDate, StringFormat='Event Date: {0:MM/dd/yyyy}'}" FontSize="14"/>
                            <Label Text="{Binding CheckIns.Count, StringFormat='Attendees: {0}'}" FontSize="14"/>
                            <Label Text="{Binding TrainingLog.Moves.Count, StringFormat='Moves Practiced: {0}'}" FontSize="14"/>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>