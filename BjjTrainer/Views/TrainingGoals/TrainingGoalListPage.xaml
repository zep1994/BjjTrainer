<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BjjTrainer.Views.TrainingGoals.TrainingGoalListPage"
             BackgroundColor="{StaticResource BackgroundColor}"
             Title="Training Goals">

    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout Padding="24" Spacing="20">

                <!-- Page Title -->
                <Label Text="Your Training Goals"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="{StaticResource AccentColor}"
                       HorizontalOptions="Center"
                       Margin="0,10,0,10">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Your " FontAttributes="Bold" />
                            <Span Text="Training Goals" FontAttributes="Bold"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>

                <!-- List of Training Goals -->
                <CollectionView ItemsSource="{Binding TrainingGoals}" SelectionMode="None">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Vertical" ItemSpacing="12" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame CornerRadius="16"
                                   Padding="16"
                                   Margin="0,4"
                                   BackgroundColor="{StaticResource CardBackgroundColor}"
                                   BorderColor="{StaticResource CardBorderColor}"
                                   HasShadow="True">
                                <VerticalStackLayout Spacing="12">
                                    <Label Text="{Binding Notes}"
                                           FontAttributes="Bold"
                                           FontSize="18"
                                           TextColor="{StaticResource CardMainTextColor}"
                                           LineBreakMode="WordWrap"
                                           MaxLines="2" />
                                    <Label Text="{Binding GoalDate, StringFormat='Goal Date: {0:MMMM dd, yyyy}'}"
                                           FontSize="14"
                                           TextColor="{StaticResource CardSubTextColor}" />
                                    <HorizontalStackLayout Spacing="12" HorizontalOptions="End">
                                        <Button Text="View"
                                                CommandParameter="{Binding Id}"
                                                Clicked="OnViewGoalClicked"
                                                BackgroundColor="{StaticResource AccentGreen}"
                                                TextColor="White"
                                                FontSize="16"
                                                FontAttributes="Bold"
                                                CornerRadius="12"
                                                HeightRequest="44"
                                                WidthRequest="100" />
                                        <Button Text="Delete"
                                                CommandParameter="{Binding Id}"
                                                Clicked="OnDeleteGoalClicked"
                                                BackgroundColor="{StaticResource AccentRed}"
                                                TextColor="White"
                                                FontSize="16"
                                                FontAttributes="Bold"
                                                CornerRadius="12"
                                                HeightRequest="44"
                                                WidthRequest="100" />
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- Add New Goal Button -->
                <Button Text="Add New Goal"
                        BackgroundColor="{StaticResource AccentGreen}"
                        TextColor="White"
                        FontSize="18"
                        FontAttributes="Bold"
                        CornerRadius="16"
                        HeightRequest="48"
                        WidthRequest="200"
                        HorizontalOptions="Center"
                        Clicked="OnSaveGoalClicked">
                    <Button.Shadow>
                        <Shadow Brush="{StaticResource CardBorderColor}"
                                Offset="2,2"
                                Radius="8"
                                Opacity="0.3" />
                    </Button.Shadow>
                </Button>
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>