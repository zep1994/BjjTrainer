<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BjjTrainer.Views.Components.MoveSelectionModal"
             Title="Select Moves"
             BackgroundColor="{StaticResource BackgroundColor}">

    <StackLayout Padding="20" Spacing="15">
        <Label Text="Select Moves"
               FontSize="24"
               HorizontalOptions="Center" />

        <ListView x:Name="MoveListView"
          ItemsSource="{Binding Moves}"
          SelectionMode="None"
          ItemTapped="OnMoveTapped">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid Padding="10" ColumnSpacing="15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}"
                              VerticalOptions="Center"
                              HorizontalOptions="Start"
                              Color="{StaticResource AccentBlue}"
                              x:Name="MoveCheckBox" />

                            <Label Text="{Binding Name}"
                           VerticalOptions="Center"
                           Grid.Column="1"
                           TextColor="{StaticResource PrimaryTextColor}"
                           FontSize="18" />
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Text="Confirm Selection"
                Clicked="OnConfirmButtonClicked"
                BackgroundColor="{StaticResource AccentBlue}"
                TextColor="White"
                CornerRadius="8"
                HeightRequest="50"
                HorizontalOptions="FillAndExpand" />
    </StackLayout>
</ContentPage>
